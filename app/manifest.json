{
  "manifest_version": 2,
  "name": "Twitter Lists Redux",
  "version": "2.0.1",

  "description": "Lists improvements for Twitter that you'd think were already part of Twitter.",
  "author": "tomitm",

  "icons": { "128": "icon128.png" },

  "permissions": [
    "https://twitter.com/*",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*"
      ],
      "run_at": "document_end",
      "js": [
        "contentscript.js"
      ],
      "css": [
        "main.css"
      ]
    }
  ]
}
